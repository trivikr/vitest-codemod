{
  "name": "@vitest-codemod/repository",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "description": "Monorepo for vitest-codemod scripts",
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --verbose --all run build",
    "g:tsc": "cd $INIT_CWD && tsc -p tsconfig.build.json",
    "g:vitest": "cd $INIT_CWD && vitest",
    "lint": "oxlint packages/**/*.{js,ts,json,md}",
    "release": "yarn build && changeset publish",
    "test": "yarn workspaces foreach --topological-dev --verbose --all run test",
    "version-packages": "changeset version && yarn --no-immutable"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@tsconfig/node14": "^1.0.3",
    "@types/jscodeshift": "^0.12.0",
    "@types/node": "^14.18.63",
    "oxlint": "^1.35.0",
    "typescript": "~4.9.5",
    "vitest": "^4.0.16"
  },
  "workspaces": [
    "packages/*"
  ]
}
